{% extends 'users.html.twig' %}

{% block title %}Modification du mot de passe de {{ app.user.firstName }} {{ app.user.name }}{% endblock %}

{% block body %}
<div class="grix xs4 container">
  {% for message in app.flashes('message') %}
    <div class="col-xs4">
      <div class="p-3 my-2 rounded-1 green light-4 text-green text-dark-4">{{ message }}</div>
    </div>
  {% endfor %}
  {% for message in app.flashes('error') %}
    <div class="col-xs4">
      <div class="p-3 my-2 rounded-1 red light-4 text-red text-dark-4">{{ message }}</div>
    </div>
  {% endfor %}
  <div class="col-xs4">
    <h1>Modification du mot de passe de {{ app.user.firstName }} {{ app.user.name }}</h1>
    <form method="post">
      <div class="form-field">
        <input type="password" id="pass" name="pass" class="form-control" />
        <label for="pass">Mot de passe</label>
      </div>
      <div class="form-field">
        <input type="password" id="pass2" name="pass2" class="form-control" />
        <label for="pass2">Confirmer le mot de passe</label>
      </div>
      <button class="btn shadow-1 rounded-1 blue">Valider</button>
    </form>
  </div>
</div>
{% endblock %}
